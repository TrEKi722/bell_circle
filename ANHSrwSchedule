<div class="banner">
    <h1>
        <script>
            var today = new Date();
            var dayOfWeek = today.getDay();

            var weekdays = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];
            var dayText = weekdays[dayOfWeek];
            var iconUrl = "https://i.ibb.co/zPD1v4V/IMG-0933.png"; // Replace with your icon image URL

            var img = new Image();
            img.src = iconUrl;
            img.width = 150; // Set the width to 100px or your desired size

            var container = document.createElement("div");
            container.style.display = "flex";
            container.style.alignItems = "center";
            container.appendChild(img);
            container.appendChild(document.createTextNode(" " + dayText));

            document.querySelector(".banner h1").appendChild(container);
        </script>
    </h1>
</div>

    <div id="schedule"></div>

    <script>
        var today = new Date();
        var dayOfWeek = today.getDay();
        var month = today.getMonth() + 1;
        var date = today.getDate();
        var year = today.getFullYear();
        var embedUrl = "";

        // Check for holidays
        if (month === 11 && date === 1 && year === 2023) {
            document.getElementById("schedule").innerHTML = "<p>Enjoy your holiday!</p>";
        } else if (month === 10 && date === 30 && year === 2023) {
            // Block Late Start
            embedUrl = "https://rewordify.com/schoolclock.php?p=09:10%3DFirst+Period;10:55%3DPassing;11:05%3DThird+Period;12:50%3DLunch;13:20%3DPassing;13:30%3DFifth+Period;15:15%3DEnd+of+School";
        } else if (dayOfWeek === 0 || dayOfWeek === 6) {
            // Weekend
            document.getElementById("schedule").innerHTML = "<p>Enjoy your weekend!</p>";

        } else if (dayOfWeek === 1) {
            // Monday
            embedUrl = "https://rewordify.com/schoolclock.php?p=08:15%3DTeacher+Collab;09:10%3DFirst+Period;09:55%3DPassing;10:05%3DSecond+Period;10:50%3DPassing;11:00%3DThird+Period;11:45%3DWolverine%20Plus;12:00%3DPassing;12:10%3DFourth+Period;12:55%3DLunch;13:25%3DPassing;13:35%3DFifth+Period;14:20%3DPassing;14:30%3DSixth+Period;15:15%3DEnd+of+School";
        } else if (dayOfWeek === 2 || dayOfWeek === 3 || dayOfWeek === 4 || dayOfWeek === 5) {
// Testing
            embedUrl = "https://rewordify.com/schoolclock.php?p=08:30%3DExam+1;10:30%3DPassing;10:40%3DWolverine+Plus;11:25%3DPassing;11:35%Exam+2;13:35%3DEnd+of+School";
        } else if (dayOfWeek === 2 || dayOfWeek === 3 || dayOfWeek === 4 || dayOfWeek === 5) {
            // Tuesday through Friday
            embedUrl = "https://rewordify.com/schoolclock.php?p=07:20%3DZero+Period;08:20%3DPassing;08:30%3DFirst+or+Second+Period;10:10%3DPassing;10:20%3DWolverine+Plus;11:00%3DPassing;11:10%3DThird+or+Fourth+Period;12:50%3DLunch;13:25%3DPassing;13:35%3DFifth+or+Sixth+Period;15:15%3DEnd+of+School";
        } else {
            // Error
            document.getElementById("schedule").innerHTML = "<p>Error 418 - I'm a Teapot</p> <hr> <p>We are working to fix the problem, please check back later.</p> <hr> <p>Yes that is a real error, look it up.</p>";
        }

        if (embedUrl !== "") {
            document.getElementById("schedule").innerHTML = '<iframe src="' + embedUrl + '" class="embed-container"></iframe>';
        }
    </script>
</body>
